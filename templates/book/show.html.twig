{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('app_book_edit',{id : book.id}) }}" class="btn btn-light btn-lg w-100"><h1>{{ book.title }}</h1></a>
    <a href="{{ path('app_author_show',{id : book.author.id}) }}" class="mt-2 btn btn-light btn-sm w-100 fs-5 fw-bolder">By {{ book.author.name }}</a>
    <div class="mt-2 d-flex justify-content-between">
        <a href="{{ path('app_book_edit',{id : book.id}) }}" class="btn btn-light btn-sm flex-grow-1 me-1">Edit</a>
        <a href="{{ path('app_book_delete',{id : book.id}) }}" class="btn btn-light btn-sm flex-grow-1 mx-1">Delete</a>
        <a href="{{ path('app_book') }}" class="btn btn-light btn-sm ms-1">Back</a>
    </div>
    <hr>
    <p>{{ book.description }}</p>
</div>
{% endblock %}
