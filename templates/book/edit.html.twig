{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('app_book_show',{id : book.id}) }}" class="btn btn-light btn-lg w-100"><h1>{{ title }}</h1></a>
    <section>
        <hr>
        {{ form(form) }}
        <hr>
    </section>
    <div class="mt-2 d-flex justify-content-between">
        <a href="{{ path('app_author_show',{id : book.author.id}) }}" class="btn btn-light btn-sm flex-grow-1 me-1">{{ book.author.name }}</a>
        <a href="{{ path('app_book_delete', {'id': book.id}) }}" class="btn btn-light btn-sm flex-grow-1 mx-1">Supprimer</a>
        <a href="{{ path('app_book_show',{id : book.id}) }}" class="btn btn-light btn-sm flex-grow-1 ms-1">Retour</a>
    </div>
</div>
{% endblock %}
